<%= form_for [ user, user.restaurants.new ], remote: true do |f| %>
  <div class='field add'>
    <%= f.label :Add %>
    <%= f.text_field :title, class: 'field', placeholder: 'Add a new restaurant.' %>
  </div>
  <div class='field rate'>
    <%= f.label :rating %>(1-5)
    <%= f.number_field :rating, :style => "width:90px;", placeholder: 'How was it?' %>
  </div>
  <div class='field date'>
    <%= f.label :visited %>
    <%= f.date_field :last_visit %>
  </div>
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>

<%= form_for [ user, user.restaurants.new ], remote: true do |f| %>
  <div class='field add'>
    <%= f.label :Add %>
    <%= f.text_field :title, class: 'field', placeholder: 'Add a new restaurant.' %></br>
  </div>
  <div class='field rate'>
    <%= f.label :rating %>(1-5)
    <%= f.number_field :rating, :style => "width:40px;" %>
  </div>
  <!-- <div class='field date'>
    <%= f.label :updated_at %>
    <%= f.date_field :updated_at, :style => "width:100px;" %>
  </div> -->
  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-success' %>
  </div>
<% end %>
